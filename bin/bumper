#!/usr/bin/env ruby
require 'optparse'
require 'bumper'

options = Hash.new

opts = OptionParser.new do |opts|
  opts.banner = %q[Bumper]

  opts.on('-p', '--project PROJECT_PATH', 'Set path to gem bump project') do |project|
    options[:project] = project
  end

  # Default find in current folder file *.gemspec
  opts.on('-gc', '--gemspec GEMSPEC_PATH', 'Set path to gemspec') do |gemspec|
    options[:gemspec] = gemspec
  end

  opts.on('-gt', '--gemset GEMSET', 'Set path to gemspec') do |gemset|
    options[:gemset] = gemset
  end

  opts.on('-a', '--absolute_path') do
    options[:absolute_path] = true
  end

  opts.on('-e', '--vendor', 'If need add to vendor path') do
    options[:vendor] = true
  end
end

opts.parse!

Bumper::Bump.new(Bumper::Configuration.configure!(options)).perform